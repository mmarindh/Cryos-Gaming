<!doctype html>
<html lang="es">
  <%- include('../partials/head.ejs') %>    
<body>
    <main class="container-fluid">
      <%- include('../partials/navBar.ejs') %>
      <!--Administrador de productos-->

      <section class="row">
        <article class="col-12">
          <h2 class="display-4 text-white bg-info text-center pt-5" >Administrador de Productos</h2>
        </article>
        <article class="col-12 bg-white">
          <a href="/administrar/create"><ion-icon name="add-circle-outline"></ion-icon>Agregar</a>
        </article>
        <article class="col-12" >
        <table class="table bg-white">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Ver</th>
                <th scope="col">Editar</th>
                <th scope="col">Borrar</th>
              </tr>
            </thead>
            <tbody>
              <% compus.forEach(compu => { %>
              <tr>
                <td><%= compu.id%> </td>
                <td><%= compu.name%> </td>
                <td><a href="/administrar/detail/<%= compu.id%>"> <ion-icon name="eye-outline"></ion-icon></a></td>
                <td><a href="/administrar/edit/<%= compu.id%>"> <ion-icon name="pencil-outline"></ion-icon></a></td>
                <td><a href="/administrar/delete/<%= compu.id%>"><ion-icon name="trash-outline"></ion-icon></a></td>
              </tr>
              <% }); %>
            </tbody>
          </table> 
        </article>       
      </section>
      
      <%- include('../partials/footer.ejs') %>
    </main>
  </body>
</html>